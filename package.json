{
  "name": "irpc",
  "version": "0.0.1",
  "description": "Node.js RPC interface solution",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "build": "esw build src/index.ts",
    "watch": "esw watch src/index.ts",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,less,md}\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lbwa/irpc.git"
  },
  "keywords": [
    "rpc",
    "ipc"
  ],
  "author": "Liu Bowen <asyncmode@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lbwa/irpc/issues"
  },
  "homepage": "https://github.com/lbwa/irpc#readme",
  "devDependencies": {
    "@lbwa/eslint-plugin": "^0.3.1",
    "@lbwa/prettier-config": "^0.1.0",
    "@lbwa/tsconfig": "^1.1.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.180",
    "@types/node": "^17.0.22",
    "eslint": "^8.11.0",
    "esw": "^0.14.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  },
  "prettier": "@lbwa/prettier-config",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,less,md}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
